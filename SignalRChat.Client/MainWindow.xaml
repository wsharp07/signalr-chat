        <Button x:Name="btnSendDirect" Content="Send Direct" HorizontalAlignment="Left" Margin="519,92,0,0" VerticalAlignment="Top" Width="75" Click="btnSendDirect_Click"/>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="157" Margin="25,152,0,0" VerticalAlignment="Top" Width="569"/>
        <Label x:Name="lblMessages" Content="Messages" HorizontalAlignment="Left" Margin="25,126,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
