        <Label x:Name="lblMessage" Content="Message" HorizontalAlignment="Left" Margin="25,66,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox x:Name="txtMessage" HorizontalAlignment="Left" Height="23" Margin="25,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="380"/>
